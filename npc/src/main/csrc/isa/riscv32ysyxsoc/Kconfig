menu "ISA-dependent Options for riscv"

config RV64
  bool "64-bit RISC-V architecture"
  default n

config RVE
  bool "Use E extension"
  default n

menuconfig ISA_HAS_CLINT
  bool "Enable CLINT"
  default y
  help
    Provide clint support.

if ISA_HAS_CLINT
config CLINT_BASE
  hex "Physical address of the CLINT"
  default 0x02000000

config CLINT_SIZE
  hex "Size of the CLINT"
  default 0x10000
endif # ISA_HAS_CLINT

menuconfig ISA_HAS_SRAM
  bool "Enable SRAM"
  default y
  help
    Provide sram support.

if ISA_HAS_SRAM
config SRAM_BASE
  hex "Physical address of the SRAM"
  default 0x0f000000

config SRAM_SIZE
  hex "Size of the SRAM"
  default 0x01000000
endif # ISA_HAS_SRAM

menuconfig ISA_HAS_UART16550
  bool "Enable UART16550"
  default y
  help
    Provide uart16550 support.

if ISA_HAS_UART16550
config UART16550_BASE
  hex "Physical address of the UART16550"
  default 0x10000000

config UART16550_SIZE
  hex "Size of the UART16550"
  default 0x1000
endif # ISA_HAS_UART16550

menuconfig ISA_HAS_SPI
  bool "Enable SPI"
  default y
  help
    Provide spi master support.

if ISA_HAS_SPI
config SPI_BASE
  hex "Physical address of the SPI"
  default 0x10001000

config SPI_SIZE
  hex "Size of the SPI"
  default 0x1000
endif # ISA_HAS_SPI

menuconfig ISA_HAS_GPIO
  bool "Enable GPIO"
  default y
  help
    Provide gpio support.

if ISA_HAS_GPIO
config GPIO_BASE
  hex "Physical address of the GPIO"
  default 0x10002000

config GPIO_SIZE
  hex "Size of the GPIO"
  default 0x10
endif # ISA_HAS_GPIO

menuconfig ISA_HAS_PS2
  bool "Enable PS2"
  default y
  help
    Provide ps2 support.

if ISA_HAS_PS2
config PS2_BASE
  hex "Physical address of the PS2"
  default 0x10011000

config PS2_SIZE
  hex "Size of the PS2"
  default 0x8
endif # ISA_HAS_PS2

menuconfig ISA_HAS_MROM
  bool "Enable MROM"

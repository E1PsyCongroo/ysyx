  help
    Provide mrom support.

if ISA_HAS_MROM
config MROM_BASE
  hex "Physical address of the MROM"
  default 0x20000000

config MROM_SIZE
  hex "Size of the MROM"
  default 0x1000
endif # ISA_HAS_MROM

menuconfig ISA_HAS_VGA
  bool "Enable VGA"
  default y
  help
    Provide vga support.

if ISA_HAS_VGA
config VGA_BASE
  hex "Physical address of the VGA"
  default 0x21000000

config VGA_SIZE
  hex "Size of the VGA"
  default 0x200000

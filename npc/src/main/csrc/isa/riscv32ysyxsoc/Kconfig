menuconfig ISA_HAS_FLASH
  bool "Enable FLASH"
  default y
  help
    Provide sram support.

if ISA_HAS_FLASH
config FLASH_BASE
  hex "Physical address of the FLASH"
  default 0x30000000

config FLASH_SIZE
  hex "Size of the FLASH"
  default 0x1000000

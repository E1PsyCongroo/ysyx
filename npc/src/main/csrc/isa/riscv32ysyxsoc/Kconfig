menuconfig ISA_HAS_CHIPLINK
  bool "Enable CHIPLINK"
  default y
  help
    Provide chiplink support.

if ISA_HAS_CHIPLINK
config ISA_HAS_CHIPLINK_MMIO
  bool
  default y

config CHIPLINK_MMIO_BASE
  hex "Physical address of the CHIPLINK MMIO"
  default 0x40000000

config CHIPLINK_MMIO_SIZE
  hex "Size of the CHIPLINK MMIO"
  default 0x40000000

config ISA_HAS_CHIPLINK_MEMO
  bool
  default y

config CHIPLINK_MEM_BASE
  hex "Physical address of the CHIPLINK MEM"
  default 0xc0000000

config CHIPLINK_MEM_SIZE
  hex "Size of the CHIPLINK MEM"
  default 0x40000000
endif # ISA_HAS_CHIPLINK

endmenu
